{
  "builds": [
    {
      "src": "api/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "runtime": "python-3.11",
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/python",
      "config": { "runtime": "python-3.11" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/api/(.*)", "dest": "api/wsgi.py" },
    { "src": "/(.*)", "dest": "api/wsgi.py" }
  ]
}